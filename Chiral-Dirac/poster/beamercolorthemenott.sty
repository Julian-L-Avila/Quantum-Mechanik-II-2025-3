% ====================
% Definitions
% ====================

% Colors from https://markkinointipankki.tuni.fi/wp-content/uploads/2024/05/TUNI_Graafinenohjeistus_052024_2.pdf
\definecolor{tuni_purple}{cmyk}{0.80,1,0,0}
\definecolor{tuni_purple2}{cmyk}{0.60,0.75,0,0}
\definecolor{tuni_purple3}{cmyk}{0.40,0.5,0,0}
\definecolor{tuni_purple4}{cmyk}{0.20,0.25,0,0}

% Extra colors
\definecolor{tuni_lightgray}{cmyk}{0, 0, 0, 0.25}
\definecolor{tuni_lightblue}{cmyk}{0.45, 0.05, 0, 0}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=tuni_purple}

% Headline
\setbeamercolor{headline}{fg=white,bg=tuni_purple}

% Block
\setbeamercolor{block title}{fg=tuni_purple,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=tuni_purple,bg=tuni_purple4}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=tuni_purple4}

% Example Block
\setbeamercolor{block example title}{fg=tuni_purple,bg=tuni_purple4}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=tuni_purple4}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=tuni_purple}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
